{
  "name": "sqleasy",
  "description": "A minimal, type-friendly async wrapper for SQLite using `sql-template-tag` and `sqlite3` for Node.js/TypeScript projects.",
  "version": "0.2.2",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=23.6.0"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "test": "node --test test/*.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "build": "node scripts/build.ts",
    "prepack": "npm run build"
  },
  "precommit": "lint, format, test",
  "peerDependencies": {
    "sql-template-tag": "^5.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.34.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "npm-dts": "^1.3.13",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3",
    "sql-template-tag": "^5.2.1",
    "sqlite3": "^5.1.7",
    "typescript": "^5.8.3"
  }
}
